generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model albums {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  artist      String
  dateBought  DateTime? @db.Date
  storeId     String?
  version     String? // album variants
  releaseType String? // single, ep, full length
  format      String? // vinyl, cd, cassette
  rating      String  // 1-5 stars
  notes       String?
  imageUrl    String?
  createdAt   DateTime  @default(now()) @db.Date
  updatedAt   DateTime  @updatedAt @db.Date
}
